    <body>
    {% block styleCSS %}{% endblock %}
    <div class="container">
    <header>
        <!-- On n'oublie pas le h1 pour le référencement ! -->
       <h1>
           <a href="{{ path('main_home') }}">
               <img src="{{ asset('img/logo.svg') }}" alt="Series | Home">
           </a>
       </h1>
        {% include 'menu/nav.html.twig' %}
    </header>
        <main>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
    <footer>
        {% include 'menu/nav.html.twig' %}
    </footer>
